<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.crowd.mysql.mapper.OrderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.atguigu.crowd.entity.po.OrderEntity">
        <id column="id" property="id" />
        <result column="order_num" property="orderNum" />
        <result column="pay_order_num" property="payOrderNum" />
        <result column="order_amount" property="orderAmount" />
        <result column="invoice" property="invoice" />
        <result column="invoice_title" property="invoiceTitle" />
        <result column="order_remark" property="orderRemark" />
        <result column="address_id" property="addressId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, order_num, pay_order_num, order_amount, invoice, invoice_title, order_remark, address_id
    </sql>

</mapper>
